<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Short URL</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-primary text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand m-lg-2">Short URL</div>
                <div class="col-3 text-end">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span class="navbar-text">Welcome, @User.Identity.Name</span>
                        <form action="/Account/Logout" method="post" class="d-inline">
                            <button class="btn btn-danger btn-sm ms-3" type="submit">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a href="/Account/Login" class="btn btn-primary btn-sm">Login</a>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row m-1 p-1">
        <div class="col-3">
            <ul class="list-group">
                <li class="list-group-item"><a href="/home/index" class="text-decoration-none">Home</a></li>
                <li class="list-group-item"><a href="/About/index" class="text-decoration-none">About</a></li>
            </ul>
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
